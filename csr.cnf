[server-cert]
keyUsage = critical, digitalSignature, keyEncipherment, keyAgreement
extendedKeyUsage = serverAuth, clientAuth
subjectAltName = @alt_name

[req]
distinguished_name = dn
prompt = no

[dn]
CN = example.com
C = FR
O = example

[alt_name]
DNS.1 = example.com
DNS.2 = *.example.com
DNS.3 = localhost
IP.1 = 192.168.0.1
IP.2 = ::1
IP.3 = 127.0.0.1
